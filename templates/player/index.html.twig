{% extends 'base.html.twig' %}

{% block title %}Player index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Player</h1>
        <div class="row">

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>CoordX</th>
                    <th>CoordY</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for player in players %}
                    <tr>
                        <td>{{ player.id }}</td>
                        <td>{{ player.name }}</td>
                        <td>{{ player.coordX }}</td>
                        <td>{{ player.coordY }}</td>
                        <td>
                            <a href="{{ path('player_show', {'id': player.id}) }}">show</a>
                            <a href="{{ path('player_edit', {'id': player.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No record found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('player_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
